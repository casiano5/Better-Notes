<Window x:Class="BetterNotesGUI.BetterNotesMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterNotesGUI"
        mc:Ignorable="d"
        Title="Better Notes" Name="MainWindowResolution" Width="800" Height="500" FontSize="16" FontFamily="UD Digi Kyokasho NK-B" Closing="OnCloseNote">
    <!-- Width= "{Binding ElementName=MainWindowResolution, Path=Width}" -->
    <!-- <TextBox Height={Binding RelativeSource={RelativeSource FindAncestor, 
           AncestorType={x:Type Window}}, Path=Height} /> -->

    <Grid Background="#FF45474A" ShowGridLines="False">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <!--Menu Bar-->
        <DockPanel>
            <Menu x:Name="Menubar" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Height="20" Width="Auto" Background="#FFF7F9CA"
                  Foreground="#5C2599" FontWeight="Bold">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="NewNote"/>
                    <MenuItem Header="_Open" Click="OpenExistingNote"/>
                    <MenuItem Header="_Save" Click="SaveCurrentNote"/>
                    <MenuItem Header="_Export (PDF)" Click="ConvertToPDF"/>
                    <MenuItem Header="_Delete" Click="DeleteCurrentNote"/>
                    <MenuItem Header="_Exit" Click="ExitToOpen"/>
                </MenuItem>
                <MenuItem Header="_User" Click="MenuItem_Click">
                    <MenuItem Header="Manage Users"/>
                    <MenuItem Header="Preferences"/>
                </MenuItem>
                <MenuItem Header="_Test">
                    <MenuItem Header="SendWindowsToastNotification" Click="testWTN"/>
                    <MenuItem Header="SendEmailNotification" Click="testEM"/>
                    <MenuItem Header="SendPhoneNotification" Click="testPN"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        

        <DockPanel Grid.Row="1">
            <Grid DockPanel.Dock="Top" Background="#FF45474A" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" 
              VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="125"/>
                </Grid.ColumnDefinitions>
                <RichTextBox x:Name="RichNote" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                             Grid.Row="1" Grid.Column="1" Height="Auto" Width="Auto" 
                             SpellCheck.IsEnabled="True" TextChanged="TextChange"/>
                
                <!--Select Font-->
                <!--
                <ComboBox x:Name="FontSelect" Grid.Column="1" Grid.Row="2" Height="30" VerticalAlignment="Top" Margin="28.6,10.2,214.6,0">
                    <ComboBoxItem Content="Select Font"/>
                </ComboBox>
                -->
                <!--Select Size-->
                <!--
                <ComboBox x:Name="SizeSelect" Grid.Column="1" Grid.Row="2" Height="30" 
                          VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10.2,62.6,0" Width="60">
                    <ComboBoxItem Content="12"/>
                </ComboBox>
                -->
            </Grid>
        </DockPanel>


        <!--
        <Grid HorizontalAlignment="Left" ShowGridLines="False" VerticalAlignment="Top" Margin="0,0,0,-20.6">

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
        -->

            <!--HorizontalAlignment="Center" VerticalAlignment="Center"-->
        <!--
            <RichTextBox x:Name="RichNote" Margin="0,0,0,0" Width="Auto" Height="Auto"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                         Grid.Row="1" Grid.Column="1"
                         Grid.RowSpan="1" Grid.ColumnSpan="1"
                         SpellCheck.IsEnabled="True"/>

        </Grid>
        -->
        
        

        <!--Reminder Panel-->
        <Expander Grid.Row="1" HorizontalAlignment="Left" Height="388" Width="172" 
                  Margin="0,20,0,0" VerticalAlignment="Top" ExpandDirection="Down"
                  Header="Reminder" IsExpanded="False" Foreground="White">

            <Grid Width="162"  Height="360" Margin="10,0,-1.6,0" HorizontalAlignment="Left"
                  Background="#FF393939"  VerticalAlignment="Top">


                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                
                <!--Verison
                At&t
                T-Mobile
                Time
                User selecter
                user menu tab
                //3 boxes phone email toast
                Default font
                text functions for uusers including checkboxes
                global colors-->
                <TextBlock Grid.Column="1" Foreground="#FFF7F9CA" Margin="-10,0,0,0">
                User
                </TextBlock>
                <ComboBox x:Name="GetUser" Grid.ColumnSpan="2" Grid.Row="1"
                         Margin="0,0,18.6,24.6" Grid.Column="1" FontSize="15">
                    <ComboBoxItem Content="Select User" IsSelected="True"/>
                </ComboBox>
                <!--User Email-->
                <TextBlock Margin="-10,30,0,0" Grid.Column="1"
                           Foreground="#FFF7F9CA" Grid.Row="1">
                    Email
                </TextBlock>
                <TextBox x:Name="RemEmail" Grid.Row="2" Grid.Column="1"
                         Margin="0,0,19.5,20" Grid.ColumnSpan="2"/>
                <!--User Phone-->
                <TextBlock Margin="-10,20,0,0" Grid.Row="2"
                           Grid.Column="1" Foreground="#FFF7F9CA">
                    Phone Number
                </TextBlock>
                <TextBox x:Name="RemPhone" Grid.ColumnSpan="2" Grid.Row="3"
                         Margin="0,0,19.5,20" Grid.Column="1"/>
                <!--Types of Services-->
                <TextBlock Margin="-10,20,0,0" Grid.Row="3"
                           Grid.Column="1" Foreground="#FFF7F9CA">
                    Service type
                </TextBlock>
                <ComboBox x:Name="SerSel" Grid.ColumnSpan="2" Grid.Row="4"
                         Margin="0,0,19,20" Grid.Column="1" FontSize="15">
                    <ComboBoxItem Content="Select Service" IsSelected="True"/>
                    <ComboBoxItem Content="Verison"/>
                    <ComboBoxItem Content='Att'/>
                    <ComboBoxItem Content="TMobile"/>

                </ComboBox>
                <!--Notification Date-->
                <DatePicker x:Name="RemDate"  Margin="10,0,-0.4,10.2" Grid.Row="5" 
                             IsDropDownOpen="False" Text="" Grid.ColumnSpan="3"/>
                <!--Reminders to Send-->
                <TextBlock Grid.Row="6" Margin="10,0.4,19.6,110" Grid.ColumnSpan="3" Foreground="#FFF7F9CA">
                    Reminders To Set:
                </TextBlock>
                <CheckBox Foreground="#FFF7F9CA" Grid.Column="1" Grid.Row="6" Content="Email" Grid.ColumnSpan="2" Margin="0,20.4,19.6,90"/>
                <CheckBox Foreground="#FFF7F9CA" Grid.Column="1" Grid.Row="6" Content="Phone" Grid.ColumnSpan="2" Margin="0,40.4,18.6,70"/>
                <CheckBox Foreground="#FFF7F9CA" Grid.Column="1" Grid.Row="6" Content="Notification" Grid.ColumnSpan="2" Margin="0,60.4,19.6,45"/>
                <!--Set Notification Button-->
                <Button x:Name="Set_Rem" Grid.Row="6" 
                        Background="#FF45474A" Foreground="#FFF7F9CA"
                        Content="Set" Grid.ColumnSpan="2" Margin="0,85.4,9.6,10" Grid.Column="1"/>
            </Grid>
        </Expander>
        

        <!-- Resourse Panel for Media Insert and Text to speech and speech to Text.-->

        <Expander Grid.Row="1" Header="" IsExpanded="False" HorizontalAlignment="Right" Width="300" Height="Auto" VerticalAlignment="Stretch" Margin="0,20,-0.4,-667.6" ExpandDirection="Left">

            <Grid VerticalAlignment="Top" HorizontalAlignment="Right" Background="#FF393939" Width="300" Height="Auto" ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <TabControl x:Name="InsertMedia" Grid.Column="1" BorderBrush="#FF393939"
                            Grid.RowSpan="10" Background="#FF393939" Margin="10,10,10,10">
                    <TabItem x:Name="InsertVideo" Header="Insert Video" IsSelected="True" 
                         Style="{StaticResource SquareTabTemplate}">
                        <!--Possible SearchBox, needs the C# implementation-->
                        <Grid Background="#FF393939" Grid.RowSpan="1" VerticalAlignment="Stretch" Height="Auto">
                            <TextBox x:Name="VideoSearchBox" Height="20" Opacity=".7"
                                     Grid.ColumnSpan="3" SpellCheck.IsEnabled="True" VerticalAlignment="Top"/>
                            <Button x:Name="SearchVideo" Height="20" Width="20" Background="#5C2599"
                                    HorizontalAlignment="Right" VerticalAlignment="Top"/>
                        </Grid>
                    </TabItem>

                    <TabItem x:Name="InsertImage" Header="Insert Image"
                         Style="{StaticResource SquareTabTemplate}">
                        <!--Possible SearchBox, needs the C# implementation-->
                        <Grid Background="#FF393939">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="152*"/>
                                <RowDefinition Height="279*"/>
                            </Grid.RowDefinitions>
                            <TextBox x:Name="ImageSearchBox" Height="20" Opacity=".7" SpellCheck.IsEnabled="True" VerticalAlignment="Top" Margin="0,0,-0.8,0"/>
                            <Button x:Name="SearchImage" Height="20" Width="20" Background="#5C2599"
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0.2,0"/>
                        </Grid>
                    </TabItem>
                    <!--Text to Speech-->
                    <TabItem x:Name="Text_Speech" Header="Text-To-Speech" IsSelected="True"
                         Style="{StaticResource SquareTabTemplate}">
                        <Grid Background="#FF393939" Margin="10,0,10,0" Height="Auto" ShowGridLines="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="39*"/>
                                <RowDefinition Height="71*"/>
                            </Grid.RowDefinitions>
                            <TextBox x:Name="TextTrans" Grid.RowSpan="2" Margin="0,4,0.4,45.6" TextWrapping="Wrap"
                                    Background="#FFF8F9E6" SpellCheck.IsEnabled="True" Padding="5"/>
                            <Button x:Name="PlayText" Grid.Row="1" Height="40" Margin="33,210,148,-0.4"
                                    Content="Play" Foreground="#FFF7F9CA" Background="#5C2599"/>
                            <Button x:Name="StopPlay" Grid.Row="1" Height="40" Margin="144,210,32,-0.4"
                                    Background="Red" Content="Stop" Foreground="#FFF7F9CA" />
                        </Grid>
                    </TabItem>
                    <!--Speech to Text-->
                    <TabItem x:Name="Speech_Text" Header="Speech-To-Text" IsSelected="True"
                         Style="{StaticResource SquareTabTemplate}">
                        <Grid VerticalAlignment="Stretch" Height="Auto">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="71*"/>
                            </Grid.RowDefinitions>
                            <Button x:Name="RecordSpeech"  Margin="23,26,170,5" Height="40"
                                Content="Record" Foreground="#FFF7F9CA" Background="#5C2599"/>
                            <Button x:Name="PlaySpeech" Content="Play" Margin="110,26,94,5" Height="40"
                                Foreground="#FFF7F9CA" Background="#5C2599"/>
                            <TextBox x:Name="TransText" Grid.Row="1" Margin="5,5,2,-0.4"
                                 Background="#FFF8F9E6" IsReadOnly="True" Padding="5"/>
                            <Button x:Name="StopRecord" Margin="187,26,24,5" Height="40"                                Content="Stop" Background="Red" Foreground="#FFF7F9CA"/>
                        </Grid>
                    </TabItem>
                </TabControl>

            </Grid>
        </Expander>

    </Grid>
</Window>