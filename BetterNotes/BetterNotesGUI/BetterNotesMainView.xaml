<Window x:Class="BetterNotesGUI.BetterNotesMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterNotesGUI"
        mc:Ignorable="d"
        Title="Better Notes" Name="MainWindowResolution" Width="800" Height="500" FontSize="16" FontFamily="UD Digi Kyokasho NK-B" SizeChanged="MainWindowResolution_SizeChanged">
    <!-- Width= "{Binding ElementName=MainWindowResolution, Path=Width}" -->
    <!-- <TextBox Height={Binding RelativeSource={RelativeSource FindAncestor, 
           AncestorType={x:Type Window}}, Path=Height} /> -->

    <Grid Background="#FF45474A" ShowGridLines="False">

        <!--Menu Bar-->
        <DockPanel Margin="0,20,-0.4,-20.6">
            <Menu x:Name="Menubar" DockPanel.Dock="Top"  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Margin="0,-22,-0.4,50" Height="20" Width="{Binding ElementName=MainWindowResolution, Path=Width}" Background="#FFF7F9CA"
                  Foreground="#5C2599" FontWeight="Bold" RenderTransformOrigin="0.502,1.616">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="NewNote"/>
                    <MenuItem Header="_Open" Click="OpenExistingNote"/>
                    <MenuItem Header="_Save"/>
                    <MenuItem Header="_Export (PDF)" Click="ConvertToPDF"/>
                    <MenuItem Header="_Exit" Click="ExitToOpen"/>
                </MenuItem>
                <MenuItem Header="_User" Click="MenuItem_Click">
                    <MenuItem Header="Manage Users"/>
                </MenuItem>
                <MenuItem Header="_Test">
                    <MenuItem Header="SendWindowsToastNotification" Click="testWTN"/>
                    <MenuItem Header="SendEmailNotification" Click="testEM"/>
                    <MenuItem Header="SendPhoneNotification" Click="testPN"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <Grid HorizontalAlignment="Left" ShowGridLines="False" VerticalAlignment="Top" Margin="0,0,0,-20.6">

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <!--HorizontalAlignment="Center" VerticalAlignment="Center"-->
            <RichTextBox x:Name="RichNote" Margin="0,0,0,0" Width="730" Height="370"
                         Grid.Row="1" Grid.Column="1"
                         Grid.RowSpan="1" Grid.ColumnSpan="1"/>

        </Grid>

        <!--Reminder Panel-->
        <Expander HorizontalAlignment="Left" Height="388" Width="172" 
                  Margin="0,20,0,0" VerticalAlignment="Top" ExpandDirection="Down"
                  Header="Reminder" IsExpanded="False" Foreground="White">

            <Grid Width="162"  Height="360" Margin="10,0,-1.6,0" HorizontalAlignment="Left"
                  Background="#FF393939"  VerticalAlignment="Top">
                <!--Verison
                At&t
                T-Mobile
                Time
                User selecter
                user menu tab
                //3 boxes phone email toast
                Default font
                text functions for uusers including checkboxes
                global colors-->
                <TextBlock Grid.Column="1" Foreground="#FFF7F9CA" Margin="-10,0,0,0">
                User
                </TextBlock>
                <ComboBox x:Name="GetUser" Grid.ColumnSpan="2" Grid.Row="1"
                         Margin="0,0,18.6,24.6" Grid.Column="1" FontSize="15">
                    <ComboBoxItem Content="Select User" IsSelected="True"/>
                </ComboBox>
                <!--User Email-->
                <TextBlock Margin="-10,30,0,0" Grid.Column="1"
                           Foreground="#FFF7F9CA" Grid.Row="1">
                    Email
                </TextBlock>
                <TextBox x:Name="RemEmail" Grid.Row="2" Grid.Column="1"
                         Margin="0,0,19.5,20" Grid.ColumnSpan="2"/>
                <!--User Phone-->
                <TextBlock Margin="-10,20,0,0" Grid.Row="2"
                           Grid.Column="1" Foreground="#FFF7F9CA">
                    Phone Number
                </TextBlock>
                <TextBox x:Name="RemPhone" Grid.ColumnSpan="2" Grid.Row="3"
                         Margin="0,0,19.5,20" Grid.Column="1"/>
                <!--Types of Services-->
                <TextBlock Margin="-10,20,0,0" Grid.Row="3"
                           Grid.Column="1" Foreground="#FFF7F9CA">
                    Service type
                </TextBlock>
                <ComboBox x:Name="SerSel" Grid.ColumnSpan="2" Grid.Row="4"
                         Margin="0,0,19,20" Grid.Column="1" FontSize="15">
                    <ComboBoxItem Content="Select Service" IsSelected="True"/>
                    <ComboBoxItem Content="Verison"/>
                    <ComboBoxItem Content='Att'/>
                    <ComboBoxItem Content="TMobile"/>

                </ComboBox>
                <!--Notification Date-->
                <DatePicker x:Name="RemDate"  Margin="10,0,-0.4,10.2" Grid.Row="5" 
                             IsDropDownOpen="False" Text="" Grid.ColumnSpan="3"/>
                <!--Reminders to Send-->
                <TextBlock Grid.Row="6" Margin="10,0.4,19.6,110" Grid.ColumnSpan="3" Foreground="#FFF7F9CA">
                    Reminders To Set:
                </TextBlock>
                <CheckBox Foreground="#FFF7F9CA" Grid.Column="1" Grid.Row="6" Content="Email" Grid.ColumnSpan="2" Margin="0,20.4,19.6,90"/>
                <CheckBox Foreground="#FFF7F9CA" Grid.Column="1" Grid.Row="6" Content="Phone" Grid.ColumnSpan="2" Margin="0,40.4,18.6,70"/>
                <CheckBox Foreground="#FFF7F9CA" Grid.Column="1" Grid.Row="6" Content="Notification" Grid.ColumnSpan="2" Margin="0,60.4,19.6,45"/>
                <!--Set Notification Button-->
                <Button x:Name="Set_Rem" Grid.Row="6" 
                        Background="#FF45474A" Foreground="#FFF7F9CA"
                        Content="Set" Grid.ColumnSpan="2" Margin="0,85.4,9.6,10" Grid.Column="1"/>



                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Expander>

        <!--Panel for Media Insert and Text to speech and speech to Text.-->
        <Expander Header="" IsExpanded="False" HorizontalAlignment="Right" Width="283" Height="1118" VerticalAlignment="Top" Margin="0,20,-0.4,-667.6" ExpandDirection="Left">

            <Grid VerticalAlignment="Top" Background="#FF393939" Width="278" Height="439" ShowGridLines="False" HorizontalAlignment="Right">
                <TabControl x:Name="InsertMedia" Margin="9.6,2,37.4,-16.6" Grid.Column="1"
                            Grid.RowSpan="10" Background="#FF393939">
                    <TabItem x:Name="InsertVideo" Header="Insert Video" IsSelected="True" 
                         Style="{StaticResource SquareTabTemplate}">
                        <!--Possible SearchBox, needs the C# implementation-->
                        <Grid Background="#FF393939" Grid.RowSpan="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165*"/>
                                <ColumnDefinition Width="82*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="VideoSearchBox" Height="20" Opacity=".7"
                                     Grid.ColumnSpan="2" IsReadOnly="False" VerticalAlignment="Top"/>
                            <Button Name="SearchVideo" Height="20" Width="20" Background="#5C2599"
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1"/>
                        </Grid>
                    </TabItem>

                    <TabItem x:Name="InsertImage" Header="Insert Image"
                         Style="{StaticResource SquareTabTemplate}">
                        <!--Possible SearchBox, needs the C# implementation-->
                        <Grid Background="#FF393939">
                            <TextBox Name="ImageSearchBox" Height="20" Opacity=".7"
                                     Grid.ColumnSpan="3" IsReadOnly="False" VerticalAlignment="Top"/>
                            <Button Name="SearchImage" Height="20" Width="20" Background="#5C2599"
                                    HorizontalAlignment="Right" VerticalAlignment="Top"/>
                        </Grid>
                    </TabItem>
                    <!--Text to Speech-->
                    <TabItem x:Name="Text_Speech" Header="Text-To-Speech" IsSelected="True"
                         Style="{StaticResource SquareTabTemplate}">
                        <Grid Background="#FF393939" Margin="10,0,0.4,-0.4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="39*"/>
                                <RowDefinition Height="71*"/>
                            </Grid.RowDefinitions>
                            <TextBox Name="TextTrans" Height="200" Background="#FFF8F9E6" VerticalAlignment="Top" Grid.RowSpan="2"/>
                            <Button x:Name="PlayText" Content="Play" Foreground="#FFF7F9CA" RenderTransformOrigin="2.153,0.467"
                                Background="#5C2599" Margin="27,88.134,154,100" Grid.Row="1"/>
                            <Button x:Name="StopPlay" Content="Stop" Background="Red" RenderTransformOrigin="2.153,0.467"
                                Foreground="#FFF7F9CA" Margin="153,88.134,23,100" Grid.Row="1"/>
                        </Grid>
                    </TabItem>
                    <!--Speech to Text-->
                    <TabItem x:Name="Speech_Text" Header="Speech-To-Text" IsSelected="True"
                         Style="{StaticResource SquareTabTemplate}">
                        <Grid>
                            <Button x:Name="RecordSpeech"  Margin="23,26,160.2,296.4"
                                Content="Record" Foreground="#FFF7F9CA" Background="#5C2599"/>
                            <Button x:Name="PlaySpeech" Content="Play" Margin="110,26,92.2,296.4"
                                Foreground="#FFF7F9CA" Background="#5C2599" RenderTransformOrigin="2.153,0.467"/>
                            <Button x:Name="StopRecord" Margin="187,26,24.2,296.4" RenderTransformOrigin="2.153,0.467"
                                Content="Stop" Background="Red" Foreground="#FFF7F9CA"/>
                            <TextBox x:Name="TransText" Margin="12,83,10.2,51.4"
                                 Background="#FFF8F9E6" IsReadOnly="True"/>
                        </Grid>
                    </TabItem>
                </TabControl>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

            </Grid>
        </Expander>

    </Grid>
</Window>